<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.findstop.darren.findmystop.ChooseService"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_service"
    android:background="@drawable/road"
    android:orientation="vertical">


    <TextView
        android:layout_width="615px"
        android:layout_height="150px"
        android:layout_marginTop="14dp"
        android:id="@+id/textView3"
        android:text="     Click on the drop down box below to   select a service!"
        android:textSize="30px"
        android:textAlignment="center"
        android:background="@drawable/rounded_corners4"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner1"
        android:textColor="#000000"
        />

    <Switch
        android:id="@+id/busswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="INWARD"
        android:textOff="OUTBOUND"
        android:thumb="@drawable/switch_newthumb"
        android:track="@drawable/switchnewt"
        android:showText="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/arrow"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="615px"
        android:layout_height="80px"
        android:background="@drawable/rounded_corners3"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="615px"
        android:layout_height="150px"
        android:id="@+id/textView4"
        android:text="    Select which direction you would like           to travel!"
        android:textSize="30px"
        android:textAlignment="center"
        android:background="@drawable/rounded_corners4"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_below="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_marginTop="41dp" />

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/arrow"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="400px"
        android:layout_height="100px"
        android:text="Find Bus Stops!"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30px"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/busswitch"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners2"/>


</RelativeLayout>
